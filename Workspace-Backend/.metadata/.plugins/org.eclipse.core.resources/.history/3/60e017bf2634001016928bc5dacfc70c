package com.example.demo.model;

import java.util.List;

import com.example.demo.config.ConversorDeImagenes;

import jakarta.persistence.Convert;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.ManyToOne;
import jakarta.validation.constraints.Min;
import jakarta.validation.constraints.NotNull;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Data
@NoArgsConstructor
@AllArgsConstructor
public class Carrete {

	@Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    private Long id;

    @NotNull(message = "El tipo no puede ser nulo")
    @Enumerated(EnumType.STRING)
    private TipoCarrete tipo;

    @ManyToOne
    private Marca marca;

    @NotNull(message = "El modelo no puede ser nulo")
    private String modelo;

    @NotNull(message = "El precio no puede ser nulo")
    @Min(value = 0, message = "El precio debe ser mayor o igual a 0")
    private Double precio;

    @NotNull(message = "El tamaño de la bobina no puede ser nulo")
    @Min(value = 0, message = "El tamaño de la bobina debe ser mayor o igual a 0")
    private Integer tamanoBobina;

    @NotNull(message = "La cantidad en stock no puede ser nula")
    @Min(value = 0, message = "La cantidad en stock debe ser mayor o igual a 0")
    private Integer cantidadEnStock;

    @NotNull(message = "El ratio no puede ser nulo")
    private String ratio;

    @NotNull(message = "El lado de la manivela no puede ser nulo")
    @Enumerated(EnumType.STRING)
    private LadoManivela ladoManivela;

    @Convert(converter = ConversorDeImagenes.class)
    private List<String> imagenes;
    
    
}