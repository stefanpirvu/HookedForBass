package com.example.demo.model;

import jakarta.persistence.ElementCollection;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.ManyToOne;
import jakarta.validation.constraints.Min;
import jakarta.validation.constraints.NotNull;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

import java.util.List;

@Entity
@Data
@NoArgsConstructor
@AllArgsConstructor
public class Carrete {

    @Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    private Long id;

    @NotNull(message = "El tipo no puede ser nulo")
    private String tipo; // e.g., SPINNING, CASTING

    @ManyToOne
    private Marca marca; // Relación con la entidad Marca

    @NotNull(message = "El modelo no puede ser nulo")
    private String modelo; // e.g., Stella FK 2500

    @Min(value = 0, message = "El precio debe ser mayor o igual a 0")
    private Double precio; // e.g., 759.99

    @Min(value = 0, message = "El tamaño de la bobina debe ser mayor o igual a 0")
    private Integer tamanoBobina; // e.g., 2500

    @Min(value = 0, message = "La cantidad en stock debe ser mayor o igual a 0")
    private Integer cantidadEnStock; // e.g., 5

    @NotNull(message = "El ratio no puede ser nulo")
    private String ratio; // e.g., 5.8:1

    @NotNull(message = "El lado de la manivela no puede ser nulo")
    private String ladoManivela; // e.g., DERECHA, IZQUIERDA

    @ElementCollection
    private List<String> imagenes; // Lista de URLs, e.g., ["https://tacklewarehouse.com/img/stella1.jpg"]
}