package com.example.demo.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.model.Carrete;
import com.example.demo.repository.CarreteRepository;

@RestController
@RequestMapping("/api/carretes")
public class CarreteController {

    @Autowired
    private CarreteRepository carreteRepository;

    @GetMapping
    public List<Carrete> getAllCarretes() {
        List<Carrete> carretes = carreteRepository.findAll();
        carretes.forEach(carrete -> {
            Hibernate.initialize(carrete.getImagenes());
            Hibernate.initialize(carrete.getMarca());
        });
        return carretes;
    }
}