package com.example.demo.service;

import com.example.demo.model.Carrete;
import com.example.demo.repository.CarreteRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class CarreteService {

    @Autowired
    private CarreteRepository carreteRepository;

    public List<Carrete> getAllCarretes() {
        return carreteRepository.findAll();
    }

    public Carrete getCarreteById(Long id) {
        return carreteRepository.findById(id)
                .orElseThrow(() -> new RuntimeException("Carrete not found with id: " + id));
    }
}
