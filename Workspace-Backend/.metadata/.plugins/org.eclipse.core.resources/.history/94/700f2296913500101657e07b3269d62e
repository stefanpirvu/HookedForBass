package com.example.demo.controller;

import com.example.demo.repository.CarreteRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;

@RestController
@RequestMapping("/api/carretes")
public class CarreteController {

    @Autowired
    private CarreteRepository carreteRepository;

    @GetMapping
    public List<Carrete> getAllCarretes() {
        List<Carrete> carretes = carreteRepository.findAll();
        carretes.forEach(c -> System.out.println("Carrete: ID=" + c.getId() + ", Modelo=" + c.getModelo() + ", Marca=" + (c.getMarca() != null ? c.getMarca().getNombre() : "null") + ", TamanoBobina=" + c.getTamanoBobina() + ", Tipo=" + c.getTipo() + ", LadoManivela=" + c.getLadoManivela()));
        return carretes;
    }
}